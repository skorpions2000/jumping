<Tags>:
    id: tags
    text: root.text_tag
    icon: 'tag'
    radius: [3]
    size_hint_y: None
    height: self.minimum_height
    pos_hint: {'center_y': .5, 'center_x': .5}
    color: 0, 0, 0, .3


<TagsBlock>:
    id: tag_block
    # cols: 1
    orientation: 'horizontal'
    height: self.minimum_height
    padding: dp(5), dp(5)
    spacing: dp(10)

<ExampleViewer>:
#    data: [{'root.ids.ask_detail.text': str(x)} for x in range(20)]
    viewclass: 'AskView'  # defines the viewtype for the data items.

    orientation: "vertical"
    spacing: 40
    padding: dp(10), dp(10)
    space_x: self.size[1]


    RecycleBoxLayout:
#        color:(0, 0.7, 0.4, 0.8)
        default_size: None, None

        # defines the size of the widget in reference to width and height
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical' # defines the orientation of data items

<AskView>:
    id: askView
    text_login: login_ask.text
    text_content: ask_content.text
    text_detail: ask_detail.text
    orientation: "vertical"
#    padding: "5dp"
    spacing: 0
    size_hint_y: None
    height: dp(10) + textAsk.height

    MDSeparator:
        height: "3dp"
    MDBoxLayout:
        id: textAsk
        orientation: 'vertical'
        size_hint_y: None
        padding: dp(10), dp(10)
        height: all_ask_box.height + all_ask_card.height + login_ask.height

        MDBoxLayout:
            id: mdboox_alls
            orientation: 'vertical'
            spacing: dp(5)
            size_hint_y: None
            height: all_ask_box.height + all_ask_card.height
            MDBoxLayout: # блок логотипа, кнопок, заголовка
                id: all_ask_box
                orientation: 'horizontal'
                spacing: dp(4)
                size_hint_y: None
                height: login_ask.height + ask_content.height
                MDBoxLayout: # Блок логотипа
                    size_hint: None, None
                    size: dp(100), dp(100)
                    AsyncImage: # логотип
                        size_hint: None, None
                        size: dp(100), dp(100)
                        allow_stretch: True
                        source: 'img/img.png'
                MDBoxLayout: # блок заголовка и кнопок
                    id: box_info_ask
                    orientation: 'vertical'
                    height: login_ask.height
                    spacing: dp(4)
#                    MDCard: # панель кнопок и логина
#                        id: buttons
#                        size_hint_y: None
#                        height: login_ask.height
#                    MDSeparator:
#                        height: "2dp"
                    MDLabel: # логин\имя
                        id: login_ask
                        size_hint_y: None
                        height: self.texture_size[1]
                        text: root.text_login
                        padding: dp(10), dp(10)


                    GridLayout: # панель кнопки лайка
                        cols: 2
                        orientation: 'rl-bt'
                        MDIconButton: # кнопка лайка
                            icon: 'cards-heart'

                        MDIconButton: # кнопка коментариев
                            icon: 'chat'

#                    MDCard: # панель заголовка
#                        id: ask_content_card
#                        size_hint_y: None
#                        height: ask_content.size[1]
                    MDSeparator:
                        height: "1dp"
                    MDLabel: # заголовок
                        id: ask_content
                        size_hint_y: None
                        height: self.texture_size[1]
                        text: root.text_content
                        padding: dp(10), dp(10)
            MDBoxLayout: # панель содержимого статьи\вопроса
                id: all_ask_card
                orientation: "vertical"
                size_hint_y: None
                height: dp(50) + ask_detail.texture_size[1]
                padding: dp(10)
                spacing: dp(10)
                TagsBlock:
                    id: tags_block
                MDSeparator:
                    height: "1dp"
                MDLabel:
                    id: ask_detail
                    size_hint_y: None
                    height: self.texture_size[1]
                    text: root.text_detail
                    padding: dp(0), dp(0)
    MDSeparator:
        height: "3dp"


